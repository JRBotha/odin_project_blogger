<%= form_for @article, html:{class: 'form-style', multipart: true} do |f| %>
    <ul>
      <% @article.errors.full_messages.each do |error| %>
          <li><%= error %></li>
      <% end %>
    </ul>
    <p>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :subtitle %><br />
      <%= f.text_field :subtitle %>
    </p>
    <p>
      <%= f.label :tag_list %><br />
      <%= f.text_field :tag_list %>
    </p>
    <p>
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </p>

    <% if @article.image.exists? %>
      <div class="preview">
        <%= image_tag @article.image.url %>
      </div>
    <% end %>

    <p class="image-upload">
      <% if !@article.image.exists? %>
        <%= f.label :image, "Attach an Image" %><br />
      <% else %>
          <%= f.label :image, "Attach a new Image" %><br />
      <% end %>
      <%= f.file_field :image %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>